<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.mapper.TopUserMapper">

    <select id="selectByWalletAddress" resultType="com.ruoyi.web.entity.TopUserEntity">
        select *
        from top_user
        where wallet = #{walletAddress}
    </select>

    <select id="selectProcessVO" resultType="com.ruoyi.web.vo.UserVO">
        select
            tu.*,
            (select _tu.id from top_user _tu where _tu.invited_code = tu.invited_user_code) as invitedUserId
        from top_user tu
        order by tu.id
    </select>

</mapper>